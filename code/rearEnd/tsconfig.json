{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": "./src"
  },
  "lib": [
    "ES2018"
  ],
  "includes": [
    "src/**/*.ts",
    "src/**/*.d.ts",
  ],
  "exclude": [
    "./tools",
    "./web"
  ]
}